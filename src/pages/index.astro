---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const imagePaths = [
  '/gallery/1.jpg',
  '/gallery/2.jpg',
  '/gallery/3.jpg',
  '/gallery/4.jpg',
  '/gallery/5.jpg',
  '/gallery/6.jpg'
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>üßë‚ÄçüöÄ Hello!</h1>
			<p>
				This is Cute Cat Gallery,
				Blog Post is on <a href="/blog">Blog</a>
				About Me is on <a href="/about">About</a>
			</p>


			<section style="
				margin: 2rem 0;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				padding: 1rem 0;
			">
				{imagePaths.map((imgSrc, index) => (
					// @ts-ignore - key is valid for list rendering
					<article key={index}>
						<img
							src={imgSrc}
							alt={`Gallery image ${index + 1}`}
							style="
								width: 100%;
								height: 200px;
								object-fit: cover;
								border-radius: 8px;
								box-shadow: 0 2px 8px rgba(0,0,0,0.1);
							"
						/>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>
