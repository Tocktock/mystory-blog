---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import { SITE_TITLE } from '../consts';
import { catPhotos } from '../data/catGallery';

const PAGE_TITLE = `Cat Pics | ${SITE_TITLE}`;
const PAGE_DESCRIPTION = 'Snapshots from Ji Yong and the cats — a gallery of cozy, curious, and playful moments.';
---

<!doctype html>
<html lang="ko">
  <head>
    <BaseHead title={PAGE_TITLE} description={PAGE_DESCRIPTION} lang="ko" />
  </head>
  <body>
    <Header />
    <main class="page" aria-labelledby="cat-pics-title">
      <header class="page__hero">
        <h1 id="cat-pics-title" class="page__title">냥이 사진 모음</h1>
        <p class="page__intro">숨은 하품, 창밖 관찰, 그리고 만냥구름의 일상을 담은 사진들을 모았어요.</p>
      </header>

      <section class="gallery" aria-label="Cat photo gallery">
        <div class="gallery__grid">
          {
            catPhotos.map(({ image, alt }) => (
              <article class="gallery__item">
                <Image
                  src={image}
                  alt={alt}
                  widths={[320, 480, 640, 960, 1280]}
                  sizes="(max-width: 640px) 100vw, (max-width: 1200px) 50vw, 33vw"
                  loading="lazy"
                  class="gallery__image"
                />
              </article>
            ))
          }
        </div>
      </section>
      <Footer />
    </main>
  </body>
</html>

<style>
  .page {
    margin: 0 auto;
    padding: 3rem 1.5rem 4rem;
    max-width: 1080px;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .page__hero {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 55ch;
  }

  .page__title {
    margin: 0;
    font-size: clamp(2.5rem, 3vw + 1rem, 3.75rem);
    line-height: 1.15;
    letter-spacing: -0.01em;
    text-wrap: balance;
  }

  .page__intro {
    margin: 0;
    font-size: clamp(1rem, 1vw + 0.85rem, 1.2rem);
    line-height: 1.6;
    color: var(--color-text-muted, #4a4a4a);
  }

  .gallery__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .gallery__item {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .gallery__item:hover,
  .gallery__item:focus-within {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.16);
  }

  .gallery__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4 / 3;
  }

  @media (max-width: 720px) {
    .page {
      padding: 2.5rem 1.25rem 3rem;
      gap: 2rem;
    }

    .gallery__grid {
      gap: 1.25rem;
    }
  }
</style>
