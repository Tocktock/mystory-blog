---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Comments from '../../components/Comments';

export async function getStaticPaths() {
  const stories = await getCollection('stories');
  return stories.map(story => ({
    params: { slug: story.slug },
    props: { story },
  }));
}

const { story } = Astro.props;
const { Content } = await story.render();

// This would be your GitHub discussion ID for this story
const discussionId = `D_kwDOXXXXXX-${story.slug}`;
---

<Layout title={story.data.title}>
  <article class="story">
    <header>
      <h1>{story.data.title}</h1>
      <time datetime={story.data.publishDate.toISOString()}>
        {story.data.publishDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    </header>
    <div class="content">
      <Content />
    </div>
    <div class="comments">
      <Comments client:load discussionId={discussionId} />
    </div>
    <a href="/" class="back-link">‚Üê Back to all stories</a>
  </article>
</Layout>

<style>
  .story {
    max-width: 65ch;
    margin: 0 auto;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }
  time {
    color: var(--secondary-color);
  }
  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 3rem;
  }
  .content :global(h2) {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    color: var(--text-color);
  }
  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }
  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }
  .comments {
    margin: 3rem 0;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }
  .back-link {
    display: inline-block;
    margin-top: 2rem;
    color: var(--accent-color);
    text-decoration: none;
  }
  .back-link:hover {
    text-decoration: underline;
  }

  /* Comments Styles */
  :global(.comments-section) {
    margin-top: 2rem;
  }
  :global(.comments-list) {
    margin: 2rem 0;
  }
  :global(.comment) {
    padding: 1rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }
  :global(.comment-header) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  :global(.avatar) {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
  }
  :global(.author) {
    font-weight: bold;
    color: var(--accent-color);
  }
  :global(.date) {
    color: var(--secondary-color);
    font-size: 0.9rem;
  }
  :global(.comment-body) {
    color: var(--text-color);
  }
  :global(.comment-form) {
    margin-top: 2rem;
  }
  :global(.comment-input) {
    width: 100%;
    min-height: 100px;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    background-color: var(--background-color);
    color: var(--text-color);
  }
  :global(.submit-button) {
    padding: 0.75rem 1.5rem;
    background-color: var(--accent-color);
    color: white;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  :global(.submit-button:hover) {
    background-color: color-mix(in srgb, var(--accent-color) 80%, black);
  }
  :global(.error) {
    color: #dc2626;
    padding: 1rem;
    border: 1px solid currentColor;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }
</style>